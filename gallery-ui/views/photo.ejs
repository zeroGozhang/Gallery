<html>
<head>
	<title><%- title %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="/stylesheets//main.css">
</head>
<body>
	<header>
		<a href="./">
			<img src="<%= avatar %>" class="header-avater" />
		</a>
		<a href="./">
			<h1 class="header-title"><%= title %></h1>
		</a>
		<ul class="m-nav">
            <li><a href="javascript:void(0)" onclick="manager()">批量管理></a></li>
            <li><a href="javascript:void(0)" onclick="selectAll()">全选</a></li>
		</ul>
  </header>
  <div class="layout">
    <% if (photos.length > 0){ %>
        <div class="album-header">
          <h1 class="album-title"><%= title %></h1>
          <% if (description && description !== '') { %>
            <h2 class="des-title">「 <%= description %> 」</h2>
          <% } %>
        </div>
        <div class="photos" itemscope itemtype="http://schema.org/ImageGallery">
          <% photos.forEach(function(photo){ %>
              <figure class="thumb js-thumb js-photos-thumb" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                  <a class="img-wrap js-img-wrap"  itemprop="contentUrl" data-size="<%= photo.size %>" data-curr-size="<%= photo.size %>">
                    <img class="js-image" data-not-lz="true" alt="<%= photo.name %>" src="<%= photo.src %>" src="./img/preloader.gif" itemprop="thumbnail"/>
                  </a>
                  <figcaption name="showing" itemprop="caption description"><input name="ck_check" type="checkbox"></figcaption>
                  <a href="<%= photo.src %>" download="<%= photo.name %>">Download Image</a>
                  <div style="display:none">
                    <% if (photo.exif) {%>
                      <div class="pswp__download_original js-download">
                        <div class="pswp__download_btn js-download-btn">查看原图 (<%= parseInt((photo.exif.size || 0) / 1024) %>K)</div>
                      </div>
                    <% } %>
                    
                  </div>
              </figure>
          <% }) %>
          <% for (var i=0; i < 10; i++) {%>
            <figure class="thumb hide js-photos-thumb"></figure>
          <% } %>
        </div>
        <% } %>
  </div>
  <footer class="footer">
  	<p>Powered by phen-gallery</a></p>
  </footer>
  <script>
      var manager = function(){
        var $ck =  document.getElementsByName('showing');
        $ck.forEach(Element=>{
            Element.style.display='inline'
        })
      }

      var selectAll = function(){
        var $sa =  document.getElementsByName('ck_check');
        $sa.forEach(element=>{
            element.checked=true;
        })
      }
      
  </script>
</body>
</html>
